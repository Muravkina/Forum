<h1 class="welcome">Welcome to EcoDash</h1>
<a class="all_topics" href="/topics">View all the topics</a>
<div class = "welcome_page">
  <div class="sign_up">
    <h3>Join us today</h3>
    <%= @authentication_message %>
    <form method="POST" action="/users">
      <div class = "name">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="name">
      </div>
      <div class="email">
        <label for="email">Email</label>
        <input type="text" id="email" name="email" placeholder="email">
      </div>
      <div class="passsword">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="password">
      </div>
      <div class="repeat_password">
        <label for="repeat_password">Repeat password</label>
        <input type="password" name="repeat_password" id="repeat_password" placeholder="repeat password">
      </div>
      <input type="submit" value="Sign Up">
    </form>
  </div>
<div class="log_in">
  <h3>Already a member?</h3>
  <p> <%= @message %>
  <form method="POST" action="/users/login">
  <div class="email">
    <label for="email">Email</label>
    <input type="text" id="email" name="email" placeholder="email">
  </div>
  <div class="password">
    <label type="password">Password</label>
    <input type="password" id="password" name="password" placeholder="password">
    </div>
    <input type="submit" value="Log In">
  </form>
</div>
</div>
